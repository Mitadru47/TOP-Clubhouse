extends layout

block content

    if currentUser 

        h2 Create Message

        form(action="/index/message/create" method="POST")

            input(name="title" placeholder="Title" value=(message===undefined ? "" : message.title) required)
            
            br
            textarea(cols="75" rows="15" name="text" placeholder="Message" value=(message===undefined ? "" : message.text) required)
            
            br

            input(name="timestamp" type="date" value=(message===undefined ? "" : message.timestamp) required)
            input(name="creator" type="text" value=currentUser._id readonly)

            button(type="submit") Create

    else 

        h2 Cannot Access Clubhouse!

        a(href="/") Log in
        a(href="/index/user/create") Sign up